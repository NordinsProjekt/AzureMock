@page "/create-resource"
@layout AzurePortalLayout
@rendermode InteractiveServer

<PageTitle>Create a resource - Microsoft Azure</PageTitle>

<div class="azure-container">
    <div class="azure-breadcrumb">
        <a href="/">Home</a>
        <span>/</span>
        <span>Create a resource</span>
    </div>

    <h1 class="azure-page-title">Create a resource</h1>

    <div class="azure-info-box">
        <p><strong>Training Environment</strong> - Select a resource type below to create simulated Azure resources for learning.</p>
    </div>

    <h3 style="margin-top:24px; margin-bottom:16px;">Databases</h3>
    <div style="display:flex; gap:16px; flex-wrap:wrap;">
        <a class="azure-card" style="width:200px; text-align:center;" href="/create-sql-server">
            <SvgIcon Icon="IconType.SqlServer" Size="64" />
            <div style="margin-top:8px; font-weight:600;">SQL Server</div>
            <div style="font-size:12px; color:#605e5c; margin-top:6px;">Create a logical server for SQL databases</div>
        </a>

        <a class="azure-card" style="width:200px; text-align:center;" href="/sql-servers">
            <SvgIcon Icon="IconType.SqlDatabase" Size="64" />
            <div style="margin-top:8px; font-weight:600;">SQL Database</div>
            <div style="font-size:12px; color:#605e5c; margin-top:6px;">Create a database on an existing server</div>
        </a>
    </div>

    <h3 style="margin-top:32px; margin-bottom:16px;">Compute</h3>
    <div style="display:flex; gap:16px; flex-wrap:wrap;">
        <a class="azure-card" style="width:200px; text-align:center;" href="#">
            <SvgIcon Icon="IconType.AppService" Size="64" />
            <div style="margin-top:8px; font-weight:600;">App Service</div>
            <div style="font-size:12px; color:#605e5c; margin-top:6px;">Create a web app</div>
        </a>

        <a class="azure-card" style="width:200px; text-align:center;" href="#">
            <SvgIcon Icon="IconType.VirtualMachine" Size="64" />
            <div style="margin-top:8px; font-weight:600;">Virtual Machine</div>
            <div style="font-size:12px; color:#605e5c; margin-top:6px;">Create a virtual machine</div>
        </a>

        <a class="azure-card" style="width:200px; text-align:center;" href="#">
            <SvgIcon Icon="IconType.Functions" Size="64" />
            <div style="margin-top:8px; font-weight:600;">Function App</div>
            <div style="font-size:12px; color:#605e5c; margin-top:6px;">Create serverless functions</div>
        </a>

        <a class="azure-card" style="width:200px; text-align:center;" href="#">
            <SvgIcon Icon="IconType.Container" Size="64" />
            <div style="margin-top:8px; font-weight:600;">Container Instance</div>
            <div style="font-size:12px; color:#605e5c; margin-top:6px;">Run containers without orchestration</div>
        </a>
    </div>

    <h3 style="margin-top:32px; margin-bottom:16px;">Storage & Security</h3>
    <div style="display:flex; gap:16px; flex-wrap:wrap;">
        <a class="azure-card" style="width:200px; text-align:center;" href="#">
            <SvgIcon Icon="IconType.Storage" Size="64" />
            <div style="margin-top:8px; font-weight:600;">Storage Account</div>
            <div style="font-size:12px; color:#605e5c; margin-top:6px;">Blob, file, queue, and table storage</div>
        </a>

        <a class="azure-card" style="width:200px; text-align:center;" href="#">
            <SvgIcon Icon="IconType.KeyVault" Size="64" />
            <div style="margin-top:8px; font-weight:600;">Key Vault</div>
            <div style="font-size:12px; color:#605e5c; margin-top:6px;">Manage secrets and certificates</div>
        </a>
    </div>

    <h3 style="margin-top:32px; margin-bottom:16px;">Networking</h3>
    <div style="display:flex; gap:16px; flex-wrap:wrap;">
        <a class="azure-card" style="width:200px; text-align:center;" href="#">
            <SvgIcon Icon="IconType.Network" Size="64" />
            <div style="margin-top:8px; font-weight:600;">Virtual Network</div>
            <div style="font-size:12px; color:#605e5c; margin-top:6px;">Create isolated network environments</div>
        </a>
    </div>

    <h3 style="margin-top:32px; margin-bottom:16px;">Management & Governance</h3>
    <div style="display:flex; gap:16px; flex-wrap:wrap;">
        <a class="azure-card" style="width:200px; text-align:center;" href="/create-resource-group">
            <SvgIcon Icon="IconType.ResourceGroups" Size="64" />
            <div style="margin-top:8px; font-weight:600;">Resource Group</div>
            <div style="font-size:12px; color:#605e5c; margin-top:6px;">Create a container for related resources</div>
        </a>

        <a class="azure-card" style="width:200px; text-align:center;" href="#">
            <SvgIcon Icon="IconType.CostManagement" Size="64" />
            <div style="margin-top:8px; font-weight:600;">Cost Management</div>
            <div style="font-size:12px; color:#605e5c; margin-top:6px;">Manage costs and budgets</div>
        </a>

        <a class="azure-card" style="width:200px; text-align:center;" href="#">
            <SvgIcon Icon="IconType.Monitor" Size="64" />
            <div style="margin-top:8px; font-weight:600;">Monitor</div>
            <div style="font-size:12px; color:#605e5c; margin-top:6px;">Monitor application and infrastructure</div>
        </a>
    </div>
</div>

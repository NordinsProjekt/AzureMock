            <circle cx="24" cy="14" r="2.5" fill="#6B34D6"/>
            <path d="M20 28H28" stroke="#6B34D6" stroke-width="2" stroke-linecap="round"/>
            break;

        case IconType.Subscriptions:
            <rect width="48" height="48" rx="8" fill="#FFF7E6"/>
            <path d="M24 14V34" stroke="#F2C200" stroke-width="3" stroke-linecap="round" />
            <path d="M18 20H30" stroke="#F2C200" stroke-width="3" stroke-linecap="round" />
            <circle cx="24" cy="28" r="3" fill="#F2C200"/>
            break;

        case IconType.AppService:
            <rect width="48" height="48" rx="8" fill="#E8FFF2"/>
            <path d="M14 34H34V30C34 27 32 24 24 24C16 24 14 27 14 30V34Z" fill="#0AA854"/>
            <circle cx="24" cy="18" r="5" fill="#0AA854"/>
            break;

        case IconType.CostManagement:
            <rect width="48" height="48" rx="8" fill="#E8F8FF"/>
            <circle cx="24" cy="24" r="8" fill="#2E9FFF"/>
            <path d="M24 16V24L28 27" stroke="#fff" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round"/>
            <path d="M18 12L20 14" stroke="#2E9FFF" stroke-width="1.5" stroke-linecap="round"/>
            <path d="M30 12L28 14" stroke="#2E9FFF" stroke-width="1.5" stroke-linecap="round"/>
            break;

        case IconType.Credits:
            <rect width="48" height="48" rx="8" fill="#F0FFF6"/>
            <circle cx="24" cy="22" r="6" fill="#1F9F6B"/>

            <path d="M16 32C16 30 19 28 24 28C29 28 32 30 32 32V34H16V32Z" fill="#1F9F6B"/>
            break;

        case IconType.Network:
            <rect width="48" height="48" rx="8" fill="#F5F5FF"/>
            <circle cx="24" cy="24" r="12" fill="#7B61FF"/>
            <path d="M24 12V36" stroke="#fff" stroke-width="1.8" stroke-linecap="round"/>
            <path d="M12 24H36" stroke="#fff" stroke-width="1.8" stroke-linecap="round"/>
            <circle cx="24" cy="24" r="4" fill="#fff"/>
            break;

        case IconType.AzureOpenAI:
            <rect width="48" height="48" rx="8" fill="#F0F7FF"/>
            <rect x="14" y="18" width="20" height="12" rx="2" fill="#2C9BF0"/>
            <circle cx="24" cy="24" r="4" fill="#fff"/>
            <path d="M28 24L32 28" stroke="#2C9BF0" stroke-width="2" stroke-linecap="round"/>
            <circle cx="32" cy="28" r="2" fill="#2C9BF0"/>
            break;

        case IconType.EntraId:
            <rect width="48" height="48" rx="8" fill="#F0FBFF"/>
            <path d="M24 12L20 18H28L24 12Z" fill="#00A4F5"/>
            <rect x="16" y="20" width="16" height="12" rx="2" fill="#00A4F5"/>
            <circle cx="24" cy="26" r="2" fill="#fff"/>
            break;

        case IconType.ResourceGroups:
            <rect width="48" height="48" rx="8" fill="#FFF8E6"/>
            <rect x="14" y="16" width="20" height="16" rx="2" fill="#F2C200"/>
            <path d="M18 22H30" stroke="#fff" stroke-width="1.5" stroke-linecap="round"/>
            <path d="M18 26H26" stroke="#fff" stroke-width="1.5" stroke-linecap="round"/>
            break;

        case IconType.AllResources:
            <rect width="48" height="48" rx="8" fill="#F0FFF6"/>
            <rect x="14" y="14" width="8" height="8" rx="1" fill="#1F9F6B"/>
            <rect x="26" y="14" width="8" height="8" rx="1" fill="#1F9F6B"/>
            <rect x="14" y="26" width="8" height="8" rx="1" fill="#1F9F6B"/>
            <rect x="26" y="26" width="8" height="8" rx="1" fill="#1F9F6B"/>
            break;

        case IconType.Dashboard:
            <rect width="48" height="48" rx="8" fill="#FFF8F0"/>
            <rect x="12" y="20" width="10" height="14" rx="1" fill="#FF8A00"/>
            <rect x="26" y="14" width="10" height="20" rx="1" fill="#FF8A00"/>
            <path d="M12 30L20 18L28 28" stroke="#FF8A00" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            break;

        case IconType.Monitor:
            <rect width="48" height="48" rx="8" fill="#FFF0F0"/>
            <circle cx="24" cy="24" r="10" stroke="#D13438" stroke-width="2" fill="none"/>
            <path d="M24 18V24L28 26" stroke="#D13438" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            break;

        case IconType.Security:
            <rect width="48" height="48" rx="8" fill="#FFF8E6"/>
            <path d="M24 12L16 16V24C16 28 20 32 24 36C28 32 32 28 32 24V16L24 12Z" fill="#F2C200"/>
            <path d="M20 24L23 27L28 22" stroke="#fff" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            break;

        case IconType.Storage:
            <rect width="48" height="48" rx="8" fill="#FFE6F0"/>
            <rect x="14" y="14" width="20" height="20" rx="2" fill="#E81123"/>
            <circle cx="24" cy="24" r="4" fill="#fff"/>
            break;

        case IconType.VirtualMachine:
            <rect width="48" height="48" rx="8" fill="#E6F4FF"/>
            <rect x="14" y="16" width="20" height="16" rx="2" fill="#0078D4"/>
            <rect x="18" y="20" width="4" height="8" rx="1" fill="#fff"/>
            <rect x="24" y="20" width="4" height="8" rx="1" fill="#fff"/>
            break;

        case IconType.KeyVault:
            <rect width="48" height="48" rx="8" fill="#FFF7E6"/>
            <rect x="16" y="20" width="16" height="14" rx="2" fill="#F2C200"/>
            <circle cx="24" cy="27" r="2" fill="#fff"/>
            <path d="M24 29V31" stroke="#fff" stroke-width="1.5" stroke-linecap="round"/>
            <path d="M20 16L24 12L28 16" stroke="#F2C200" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            break;

        case IconType.Functions:
            <rect width="48" height="48" rx="8" fill="#FFF0E6"/>
            <path d="M18 14L24 24L30 14" stroke="#FF8A00" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"/>
            <path d="M18 34L24 24L30 34" stroke="#FF8A00" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"/>
            break;

        case IconType.Container:
            <rect width="48" height="48" rx="8" fill="#E6F4FF"/>
            <rect x="12" y="14" width="24" height="20" rx="2" stroke="#0078D4" stroke-width="2" fill="none"/>
            <rect x="16" y="18" width="16" height="12" rx="1" fill="#50E6FF"/>
            break;

        case IconType.DevOps:
            <rect width="48" height="48" rx="8" fill="#F0F7FF"/>
            <circle cx="18" cy="24" r="4" fill="#2C9BF0"/>
            <circle cx="30" cy="24" r="4" fill="#2C9BF0"/>
            <path d="M18 24H30" stroke="#2C9BF0" stroke-width="2" stroke-linecap="round"/>
            <path d="M18 20L24 14L30 20" stroke="#2C9BF0" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            break;

        case IconType.Notification:
            <rect width="48" height="48" rx="8" fill="#FFF7E6"/>
            <path d="M24 14C20 14 17 17 17 21V26L14 29H34L31 26V21C31 17 28 14 24 14Z" fill="#F2C200"/>
            <path d="M22 32C22 33 23 34 24 34C25 34 26 33 26 32" stroke="#F2C200" stroke-width="2" stroke-linecap="round"/>
            <circle cx="30" cy="18" r="3" fill="#E81123"/>
            break;

        case IconType.Empty:
            <rect width="48" height="48" rx="8" fill="#F3F2F1"/>
            <rect x="14" y="14" width="20" height="20" rx="2" stroke="#D1D1D1" stroke-width="2" fill="none"/>
            <path d="M20 24H28" stroke="#D1D1D1" stroke-width="2" stroke-linecap="round"/>
            break;

        default:
            <rect width="48" height="48" rx="8" fill="#F3F2F1"/>
            <circle cx="24" cy="24" r="10" stroke="#605e5c" stroke-width="2" fill="none"/>
            break;
    }
</svg>

@code {
    [Parameter]
    public IconType Icon { get; set; } = IconType.CreateResource;

    [Parameter]
    public string Size { get; set; } = "48";

    [Parameter]
    public bool Animated { get; set; } = false;

    [Parameter]
    public string CssClass { get; set; } = string.Empty;

    [Parameter]
    public string Style { get; set; } = string.Empty;
}

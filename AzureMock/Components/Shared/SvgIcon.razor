@namespace AzureMock.Components.Shared

<svg width="@Size" height="@Size" viewBox="0 0 48 48" fill="none" xmlns="http://www.w3.org/2000/svg" class="svg-icon @(Animated ? "svg-icon-animated" : "") @CssClass" style="@Style">
    @switch (Icon)
    {
        case IconType.CreateResource:
            <rect width="48" height="48" rx="8" fill="#E6F4FF"/>
            <path d="M24 12V36" stroke="#0078D4" stroke-width="3" stroke-linecap="round" stroke-linejoin="round"/>
            <path d="M12 24H36" stroke="#0078D4" stroke-width="3" stroke-linecap="round" stroke-linejoin="round"/>

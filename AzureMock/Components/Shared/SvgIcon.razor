        case IconType.SqlServer:
            <rect width="48" height="48" rx="8" fill="#E6F4FF"/>
            <rect x="12" y="14" width="24" height="6" rx="2" fill="#0078D4"/>
            <rect x="12" y="22" width="24" height="6" rx="2" fill="#50E6FF"/>
            <rect x="12" y="30" width="24" height="6" rx="2" fill="#0078D4"/>
            break;

        case IconType.SqlDatabase:
            <rect width="48" height="48" rx="8" fill="#E6F4FF"/>
            <ellipse cx="24" cy="18" rx="10" ry="4" fill="#0078D4"/>
            <path d="M14 18V30C14 32.2 18.5 34 24 34C29.5 34 34 32.2 34 30V18" fill="#50E6FF"/>
            <ellipse cx="24" cy="30" rx="10" ry="4" fill="#0078D4"/>
